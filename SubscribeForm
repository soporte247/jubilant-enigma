import React, { useState } from 'react';
import { motion } from 'framer-motion';
import { Mail, User, ArrowRight, CheckCircle, Loader2, Bell } from 'lucide-react';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { base44 } from '@/api/base44Client';
import { toast } from 'sonner';

export default function SubscribeForm({ compact = false }) {
  const [email, setEmail] = useState('');
  const [name, setName] = useState('');
  const [isLoading, setIsLoading] = useState(false);
  const [isSubscribed, setIsSubscribed] = useState(false);

  const handleSubmit = async (e) => {
    e.preventDefault();
    
    if (!email) {
      toast.error('Por favor, introduce tu correo electrónico');
      return;
    }

    setIsLoading(true);
    
    try {
      await base44.entities.Subscriber.create({
        email,
        name: name || null,
        subscribed_at: new Date().toISOString()
      });
      
      setIsSubscribed(true);
      toast.success('¡Te has unido a la lista de espera!');
      setEmail('');
      setName('');
    } catch (error) {
      toast.error('Hubo un error. Por favor, inténtalo de nuevo.');
    } finally {
      setIsLoading(false);
    }
  };

  if (isSubscribed) {
    return (
      <motion.div
        initial={{ opacity: 0, scale: 0.95 }}
        animate={{ opacity: 1, scale: 1 }}
        className={`text-center ${compact ? 'p-6' : 'p-8 md:p-12'} bg-gradient-to-br from-green-500/10 to-cyan-500/10 border border-green-500/20 rounded-3xl`}
      >
        <div className="w-16 h-16 rounded-full bg-green-500/20 mx-auto mb-4 flex items-center justify-center">
          <CheckCircle className="w-8 h-8 text-green-400" />
        </div>
        <h3 className="text-2xl font-bold text-white mb-2">¡Gracias por unirte!</h3>
        <p className="text-slate-400">
          Te notificaremos cuando DataShark esté listo para el lanzamiento.
        </p>
      </motion.div>
    );
  }

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      whileInView={{ opacity: 1, y: 0 }}
      viewport={{ once: true }}
      transition={{ duration: 0.6 }}
      className={compact ? '' : 'bg-slate-900/50 border border-slate-800 rounded-3xl p-8 md:p-12 backdrop-blur-sm'}
    >
      {!compact && (
        <div className="text-center mb-8">
          <div className="inline-flex p-3 rounded-2xl bg-blue-500/10 mb-4">
            <Bell className="w-8 h-8 text-blue-400" />
          </div>
          <h3 className="text-2xl md:text-3xl font-bold text-white mb-3">
            Sé el primero en saberlo
          </h3>
          <p className="text-slate-400 max-w-md mx-auto">
            Únete a nuestra lista de espera y recibe noticias exclusivas sobre el lanzamiento de DataShark.
          </p>
        </div>
      )}

      <form onSubmit={handleSubmit} className={`space-y-4 ${compact ? '' : 'max-w-md mx-auto'}`}>
        <div className="relative">
          <User className="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-500" />
          <Input
            type="text"
            placeholder="Tu nombre (opcional)"
            value={name}
            onChange={(e) => setName(e.target.value)}
            className="pl-12 py-6 bg-slate-800/50 border-slate-700 text-white placeholder:text-slate-500 rounded-xl focus:border-blue-500 focus:ring-blue-500/20"
          />
        </div>
        
        <div className="relative">
          <Mail className="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-500" />
          <Input
            type="email"
            placeholder="Tu correo electrónico"
            value={email}
            onChange={(e) => setEmail(e.target.value)}
            required
            className="pl-12 py-6 bg-slate-800/50 border-slate-700 text-white placeholder:text-slate-500 rounded-xl focus:border-blue-500 focus:ring-blue-500/20"
          />
        </div>

        <Button
          type="submit"
          disabled={isLoading}
          className="w-full bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-500 hover:to-cyan-500 text-white py-6 rounded-xl text-lg font-semibold transition-all duration-300 hover:shadow-lg hover:shadow-blue-500/25"
        >
          {isLoading ? (
            <>
              <Loader2 className="w-5 h-5 mr-2 animate-spin" />
              Procesando...
            </>
          ) : (
            <>
              Unirme a la lista de espera
              <ArrowRight className="w-5 h-5 ml-2" />
            </>
          )}
        </Button>

        <p className="text-center text-slate-500 text-sm">
          No spam. Solo actualizaciones importantes sobre el lanzamiento.
        </p>
      </form>
    </motion.div>
  );
}